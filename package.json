{
  "name": "koala-ai",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered lecture notes and meeting transcription app",
  "workspaces": [
    "client",
    "mcp-server",
    "shared"
  ],
  "scripts": {
    "postinstall": "patch-package || true",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd mcp-server && npm run dev",
    "build": "npm run build:shared && npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd mcp-server && npm run build",
    "build:shared": "cd shared && npm run build",
    "test": "npm run test:client && npm run test:server",
    "test:client": "cd client && npm test",
    "test:server": "cd mcp-server && npm test",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "cd client && npm run lint",
    "lint:server": "cd mcp-server && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "capacitor-voice-recorder": "^7.0.6"
  }
}
