# Server Configuration
PORT=3001
NODE_ENV=development
HOST=localhost

# Groq Configuration (AI Services - FREE)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile
WHISPER_MODEL=whisper-large-v3

# Supabase (Auth + Database + Storage - ALL FREE)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_STORAGE_BUCKET=audio-recordings

# MCP Server Configuration
MCP_SERVER_NAME=koala-ai-mcp
MCP_SERVER_VERSION=0.1.0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Audio Processing
MAX_AUDIO_FILE_SIZE=26214400
ALLOWED_AUDIO_FORMATS=audio/mpeg,audio/wav,audio/mp4,audio/m4a,audio/webm

# Security
JWT_SECRET=your_jwt_secret_here
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
